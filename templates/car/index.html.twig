{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}


{% block heading_h1 %}
    liste des Car{% endblock %}

{% block heading_btn %}
    <a href="{{ path('car_new') }}"
       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus fa-sm text-white-50"></i> Cr√©er un nouveau
    </a>
{% endblock %}

{% block content %}

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Serial</th>
                        <th>Color</th>
                        <th>Prod_year</th>
                        <th>Image</th>
                        <th>Gearbox</th>
                        <th>FiscalPower</th>
                        <th>Ajouter par</th>
                        <th>Date d'ajout</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for car in cars %}
                        <tr>
                            <td>{{ car.id }}</td>
                            <td>{{ car.serial }}</td>
                            <td>{{ car.color }}</td>
                            <td>{{ car.prodYear ? car.prodYear|date('Y-m-d') : '' }}</td>
                            <td>{{ car.image }}</td>
                            <td>{{ car.gearbox }}</td>
                            <td>{{ car.fiscalPower }}</td>
                            <td>{{ car.user.username }}</td>
                            <td>{{ car.dateAdded ? car.dateAdded|date('Y-m-d') : '' }}</td>
                            <td>
                                <a class="btn btn-info btn-circle btn-sm" href="{{ path('car_show', {'id': car.id}) }}"><i
                                            class="fas fa-eye"></i></a>
                                <a class="btn btn-info btn-circle btn-sm" href="{{ path('car_edit', {'id': car.id}) }}"><i
                                            class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
