{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block heading_h1 %}
Car{% endblock %}

{% block heading_btn %}

<div class="btn-group" role="group">

    <a href="{{ path('car_index') }}" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> {{ 'back to list'|trans }} </a>

    <a href="{{ path('car_edit', {'id': car.id}) }}"
       class="btn btn-sm btn-info shadow-sm">
        <i class="fas fa-edit fa-sm text-white-50"></i> {{ 'edit'|trans }}
    </a>

</div>

{% endblock %}


{% block content %}
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="table">
            <tbody>
                            <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                            <tr>
                    <th>Serial</th>
                    <td>{{ car.serial }}</td>
                </tr>
                            <tr>
                    <th>Color</th>
                    <td>{{ car.color }}</td>
                </tr>
                            <tr>
                    <th>Prod_year</th>
                    <td>{{ car.prodYear ? car.prodYear|date('Y-m-d') : '' }}</td>
                </tr>
                            <tr>
                    <th>Image</th>
                    <td>{{ car.image }}</td>
                </tr>
                            <tr>
                    <th>Gearbox</th>
                    <td>{{ car.gearbox }}</td>
                </tr>
                            <tr>
                    <th>FiscalPower</th>
                    <td>{{ car.fiscalPower }}</td>
                </tr>
                        </tbody>
        </table>
        <hr/>
        {{ include('car/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

