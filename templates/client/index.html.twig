{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}


{% block heading_h1 %}
    liste des Client{% endblock %}

{% block heading_btn %}
    <a href="{{ path('client_new') }}"
       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus fa-sm text-white-50"></i> Cr√©er un nouveau
    </a>
{% endblock %}

{% block content %}

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Cin</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Documents</th>
                        <th>Address</th>
                        <th>Birthday</th>
                        <th>Permi</th>
                        <th>PermiDate</th>
                        <th>Nationality</th>
                        <th>DateAdd</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.cin }}</td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.phone }}</td>
                            <td>{{ client.documents }}</td>
                            <td>{{ client.address }}</td>
                            <td>{{ client.birthday ? client.birthday|date('Y-m-d') : '' }}</td>
                            <td>{{ client.permi }}</td>
                            <td>{{ client.permiDate ? client.permiDate|date('Y-m-d') : '' }}</td>
                            <td>{{ client.nationality }}</td>
                            <td>{{ client.dateAdd ? client.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-info btn-circle btn-sm"
                                   href="{{ path('client_show', {'id': client.id}) }}"><i
                                            class="fas fa-eye"></i></a>
                                <a class="btn btn-info btn-circle btn-sm"
                                   href="{{ path('client_edit', {'id': client.id}) }}"><i
                                            class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="14">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
