{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block heading_h1 %}
Client{% endblock %}

{% block heading_btn %}

<div class="btn-group" role="group">

    <a href="{{ path('client_index') }}" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> {{ 'back to list'|trans }} </a>

    <a href="{{ path('client_edit', {'id': client.id}) }}"
       class="btn btn-sm btn-info shadow-sm">
        <i class="fas fa-edit fa-sm text-white-50"></i> {{ 'edit'|trans }}
    </a>

</div>

{% endblock %}


{% block content %}
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="table">
            <tbody>
                            <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                            <tr>
                    <th>Cin</th>
                    <td>{{ client.cin }}</td>
                </tr>
                            <tr>
                    <th>Name</th>
                    <td>{{ client.name }}</td>
                </tr>
                            <tr>
                    <th>Email</th>
                    <td>{{ client.email }}</td>
                </tr>
                            <tr>
                    <th>Phone</th>
                    <td>{{ client.phone }}</td>
                </tr>
                            <tr>
                    <th>Documents</th>
                    <td>{{ client.documents }}</td>
                </tr>
                            <tr>
                    <th>Adresse</th>
                    <td>{{ client.adresse }}</td>
                </tr>
                            <tr>
                    <th>Address</th>
                    <td>{{ client.address }}</td>
                </tr>
                            <tr>
                    <th>Birthday</th>
                    <td>{{ client.birthday ? client.birthday|date('Y-m-d') : '' }}</td>
                </tr>
                            <tr>
                    <th>Permi</th>
                    <td>{{ client.permi }}</td>
                </tr>
                            <tr>
                    <th>PermiDate</th>
                    <td>{{ client.permiDate ? client.permiDate|date('Y-m-d') : '' }}</td>
                </tr>
                            <tr>
                    <th>Nationality</th>
                    <td>{{ client.nationality }}</td>
                </tr>
                            <tr>
                    <th>DateAdd</th>
                    <td>{{ client.dateAdd ? client.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                        </tbody>
        </table>
        <hr/>
        {{ include('client/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

