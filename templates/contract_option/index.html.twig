{% extends 'base.html.twig' %}

{% block title %}ContractOption index{% endblock %}


{% block heading_h1 %}
liste des ContractOption{% endblock %}

{% block heading_btn %}
<a href="{{ path('contract_option_new') }}"
   class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-plus fa-sm text-white-50"></i> Cr√©er un nouveau
</a>
{% endblock %}

{% block content %}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Color</th>
                                            <th>Active</th>
                                            <th>Price</th>
                                        <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for contract_option in contract_options %}
                <tr>
                                            <td>{{ contract_option.id }}</td>
                                            <td>{{ contract_option.name }}</td>
                                            <td>{{ contract_option.description }}</td>
                                            <td>{{ contract_option.color }}</td>
                                            <td>{{ contract_option.active ? 'Yes' : 'No' }}</td>
                                            <td>{{ contract_option.price }}</td>
                                        <td>
                        <a class="btn btn-info btn-circle btn-sm"
                           href="{{ path('contract_option_show', {'id': contract_option.id}) }}"><i
                                    class="fas fa-eye"></i></a>
                        <a class="btn btn-info btn-circle btn-sm"
                           href="{{ path('contract_option_edit', {'id': contract_option.id}) }}"><i
                                    class="fas fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
