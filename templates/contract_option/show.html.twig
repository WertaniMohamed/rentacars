{% extends 'base.html.twig' %}

{% block title %}ContractOption{% endblock %}

{% block heading_h1 %}
    ContractOption{% endblock %}

{% block heading_btn %}

    <div class="btn-group" role="group">

        <a href="{{ path('contract_option_index') }}" class="btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> {{ 'back to list'|trans }} </a>

        <a href="{{ path('contract_option_edit', {'id': contract_option.id}) }}"
           class="btn btn-sm btn-info shadow-sm">
            <i class="fas fa-edit fa-sm text-white-50"></i> {{ 'edit'|trans }}
        </a>

    </div>

{% endblock %}


{% block content %}
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ contract_option.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ contract_option.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ contract_option.description }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ contract_option.active ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ contract_option.price }}</td>
                </tr>
                </tbody>
            </table>
            <hr/>
            {{ include('contract_option/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

