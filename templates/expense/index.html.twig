{% extends 'base.html.twig' %}

{% block title %}Expense index{% endblock %}


{% block heading_h1 %}
liste des Expense{% endblock %}

{% block heading_btn %}
<a href="{{ path('expense_new') }}"
   class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-plus fa-sm text-white-50"></i> Cr√©er un nouveau
</a>
{% endblock %}

{% block content %}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>DateAdded</th>
                                            <th>PaymentDate</th>
                                            <th>Amount</th>
                                        <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for expense in expenses %}
                <tr>
                                            <td>{{ expense.id }}</td>
                                            <td>{{ expense.name }}</td>
                                            <td>{{ expense.description }}</td>
                                            <td>{{ expense.dateAdded ? expense.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ expense.paymentDate ? expense.paymentDate|date('Y-m-d') : '' }}</td>
                                            <td>{{ expense.amount }}</td>
                                        <td>
                        <a class="btn btn-info btn-circle btn-sm" href="{{ path('expense_show', {'id': expense.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-info btn-circle btn-sm" href="{{ path('expense_edit', {'id': expense.id}) }}"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
