{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block heading_h1 %}
Expense{% endblock %}

{% block heading_btn %}

<div class="btn-group" role="group">

    <a href="{{ path('expense_index') }}" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> {{ 'back to list'|trans }} </a>

    <a href="{{ path('expense_edit', {'id': expense.id}) }}"
       class="btn btn-sm btn-info shadow-sm">
        <i class="fas fa-edit fa-sm text-white-50"></i> {{ 'edit'|trans }}
    </a>

</div>

{% endblock %}


{% block content %}
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="table">
            <tbody>
                            <tr>
                    <th>Id</th>
                    <td>{{ expense.id }}</td>
                </tr>
                            <tr>
                    <th>Name</th>
                    <td>{{ expense.name }}</td>
                </tr>
                            <tr>
                    <th>Description</th>
                    <td>{{ expense.description }}</td>
                </tr>
                            <tr>
                    <th>DateAdded</th>
                    <td>{{ expense.dateAdded ? expense.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                            <tr>
                    <th>PaymentDate</th>
                    <td>{{ expense.paymentDate ? expense.paymentDate|date('Y-m-d') : '' }}</td>
                </tr>
                            <tr>
                    <th>Amount</th>
                    <td>{{ expense.amount }}</td>
                </tr>
                        </tbody>
        </table>
        <hr/>
        {{ include('expense/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

