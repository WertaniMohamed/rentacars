{% extends 'base.html.twig' %}

{% block title %}Fuel{% endblock %}

{% block heading_h1 %}
    Carburant: {{ fuel.name }}
{% endblock %}

{% block heading_btn %}

    <div class="btn-group" role="group">
        <a href="{{ path('fuel_index') }}"
           class="btn btn-sm btn-primary shadow-sm"><i
                    class="fas fa-arrow-left fa-sm text-white-50"></i> retour Ã  la liste
        </a>
        <a href="{{ path('fuel_edit', {'id': fuel.id}) }}"
           class="btn btn-sm btn-info shadow-sm"><i
                    class="fas fa-edit fa-sm text-white-50"></i> Modifier
        </a>

    </div>

{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-body">

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ fuel.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ fuel.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ fuel.description }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>{{ fuel.logo }}</td>
                </tr>
                </tbody>
            </table>

            <hr/>

            {{ include('fuel/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
