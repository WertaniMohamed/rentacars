{% extends 'base.html.twig' %}

{% block title %}Mark{% endblock %}

{% block heading_h1 %}
    Marque: {{ mark.name }}
{% endblock %}

{% block heading_btn %}

    <div class="btn-group" role="group">
        <a href="{{ path('mark_index') }}"
           class="btn btn-sm btn-primary shadow-sm"><i
                    class="fas fa-arrow-left fa-sm text-white-50"></i> retour Ã  la liste
        </a>
        <a href="{{ path('mark_edit', {'id': mark.id}) }}"
           class="btn btn-sm btn-info shadow-sm"><i
                    class="fas fa-edit fa-sm text-white-50"></i> Modifier
        </a>

    </div>

{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-body">

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ mark.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ mark.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ mark.description }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>{{ mark.logo }}</td>
                </tr>
                </tbody>
            </table>

            <hr/>

            {{ include('mark/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
