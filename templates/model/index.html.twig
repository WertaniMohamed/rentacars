{% extends 'base.html.twig' %}

{% block title %}Model index{% endblock %}


{% block heading_h1 %}
    liste des modeles
{% endblock %}

{% block heading_btn %}

    <a href="{{ path('model_new') }}"
       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus fa-sm text-white-50"></i> Cr√©er un nouveau
    </a>
{% endblock %}

{% block content %}
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Marque</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for model in models %}
                        <tr>
                            <td>{{ model.id }}</td>
                            <td>{{ model.name }}</td>
                            <td>{{ model.description }}</td>
                            <td>{{ model.mark.name }}</td>
                            <td>
                                <a class="btn btn-info btn-circle btn-sm"
                                   href="{{ path('model_show', {'id': model.id}) }}"><i class="fas fa-eye"></i></a>
                                <a class="btn btn-info btn-circle btn-sm"
                                   href="{{ path('model_edit', {'id': model.id}) }}"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
