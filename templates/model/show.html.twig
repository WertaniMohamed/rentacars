{% extends 'base.html.twig' %}

{% block title %}Modèle{% endblock %}

{% block heading_h1 %}
    Modèle: {{ model.name }}
{% endblock %}

{% block heading_btn %}

    <div class="btn-group" role="group">
        <a href="{{ path('model_index') }}"
           class="btn btn-sm btn-primary shadow-sm"><i
                    class="fas fa-arrow-left fa-sm text-white-50"></i> retour à la liste
        </a>
        <a href="{{ path('model_edit', {'id': model.id}) }}"
           class="btn btn-sm btn-info shadow-sm"><i
                    class="fas fa-edit fa-sm text-white-50"></i> Modifier
        </a>

    </div>

{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ model.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ model.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ model.description }}</td>
                </tr>
                </tbody>
            </table>
            <hr/>
            {{ include('model/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
