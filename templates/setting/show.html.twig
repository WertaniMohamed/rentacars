{% extends 'base.html.twig' %}

{% block title %}Setting{% endblock %}

{% block heading_h1 %}
Setting{% endblock %}

{% block heading_btn %}

<div class="btn-group" role="group">

    <a href="{{ path('setting_index') }}" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> {{ 'back to list'|trans }} </a>

    <a href="{{ path('setting_edit', {'id': setting.id}) }}"
       class="btn btn-sm btn-info shadow-sm">
        <i class="fas fa-edit fa-sm text-white-50"></i> {{ 'edit'|trans }}
    </a>

</div>

{% endblock %}


{% block content %}
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="table">
            <tbody>
                            <tr>
                    <th>Id</th>
                    <td>{{ setting.id }}</td>
                </tr>
                            <tr>
                    <th>Name</th>
                    <td>{{ setting.name }}</td>
                </tr>
                            <tr>
                    <th>Value</th>
                    <td>{{ setting.value }}</td>
                </tr>
                            <tr>
                    <th>Description</th>
                    <td>{{ setting.description }}</td>
                </tr>
                            <tr>
                    <th>DateUpdate</th>
                    <td>{{ setting.dateUpdate ? setting.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                        </tbody>
        </table>
        <hr/>
        {{ include('setting/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

